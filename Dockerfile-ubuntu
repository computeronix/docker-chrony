ARG DISTRO="ubuntu"
ARG VERSION="latest"
FROM ${DISTRO}:${VERSION}
ARG DISTRO

LABEL \
  maintainer="computeronix" \
  website="https://aka.wf/ai6" \
  description="docker file ${DISTRO} - ${VERSION}"

RUN apt-get update \
  && apt-get -y install chrony systemctl \
  && rm -rf /var/lib/apt/lists/*

CMD ["systemctl", "enable", "--now" "chrony"]
#; /bin/sh -c bash
